<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:padding="8dp"
    tools:context=".activities.MainActivity">

    <Button
        android:id="@+id/activity_main_btn_open_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_btn_open_camera_hint" />

    <View
        android:id="@+id/activity_main_view_separator1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/activity_main_btn_open_camera"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/activity_main_iv_last_captured_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_main_view_separator1"/>

</RelativeLayout>